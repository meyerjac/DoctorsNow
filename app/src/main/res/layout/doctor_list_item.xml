<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryLight"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#eeeeee"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="1">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="91dp"
        android:id="@+id/doctorImageView"
        android:src="@drawable/ninja"
        android:scaleType="centerCrop"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor name"
            android:id="@+id/doctorName"
            android:textStyle="italic"
            android:textColorLink="@android:color/primary_text_light"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/doctorImageView"
            android:layout_toEndOf="@+id/doctorImageView"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Address"
            android:id="@+id/address"
            android:textColor="@color/colorAccent"
            android:clickable="false"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/doctorImageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
             />

        <TextView
            android:text="gender"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/gender"
            android:textColorHint="@android:color/primary_text_dark"
            android:textSize="12sp"
            android:layout_alignBottom="@+id/doctorName"
            android:layout_toRightOf="@+id/doctorName"
            android:layout_toEndOf="@+id/doctorName"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:text="website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#1111ee"
            android:id="@+id/website"
            android:clickable="?android:attr/windowFullscreen"
            android:layout_alignParentBottom="true" />

        <TextView
            android:text="BIO"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/bio"

            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/doctorImageView"
            android:layout_toEndOf="@+id/doctorImageView" />

    </RelativeLayout>
</LinearLayout>