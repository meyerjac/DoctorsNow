<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.jacksonmeyer.sidekick.ui.MainActivity"
    android:theme="@style/Theme.AppCompat">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Saved Doctors"
        android:id="@+id/savedDoctorsButton"
        android:background="@color/colorIcons"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Sidekick"
        android:id="@+id/sidekickWelcomeHeader"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/firstContinueButton"
        android:layout_toStartOf="@+id/firstContinueButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/firstContinueButton"
        android:background="@color/colorIcons"
        android:textColor="@color/colorPrimaryDark"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:paddingTop ="20dp"
        android:paddingRight="20dp"


        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Find the right match"
        android:id="@+id/sidekickWelcomescreenRules"
        android:textStyle="normal"
        android:textSize="35sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/sidekickWelcomeHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2. It allows people to access info about many different doctors"
        android:id="@+id/textView3"
        android:background="@color/colorAccent"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1. this is an app that lets you discover doctors from around the country"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:background="@color/colorAccent"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/sidekickWelcomescreenRules"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3. I Hope you find the right doctor for your lifestyle."
        android:id="@+id/textView4"
        android:background="@color/colorAccent"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Doctors"
        android:id="@+id/findDoctorsButton"
        android:background="@color/colorIcons"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="visible"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/savedDoctorsButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
