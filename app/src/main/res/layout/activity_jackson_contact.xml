<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_jackson_contact"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.jacksonmeyer.sidekick.FormInfoActivity">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/introPageBackground"
    android:src="@drawable/background2"
    android:scaleType="centerCrop"
    android:layout_alignTop="@+id/textView"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <TextView
        android:text="Jackson Meyer "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:id="@+id/JacksonNameTextView"
        android:textSize="36sp" />

    <TextView
        android:text="Tap to call:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="30sp"
        android:layout_below="@+id/JacksonNameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <TextView
        android:text="5037392709"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneNumberTextView"
        android:background="@color/colorAccent"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignRight="@+id/JacksonNameTextView"
        android:layout_alignEnd="@+id/JacksonNameTextView" />


</RelativeLayout>
